{
  "name": "example-subscription-web-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0",
    "npm": ">=8.0"
  },
  "scripts": {
    "deploy-check": "standard --fix && npm test | tee tests.txt && npm run generate",
    "generate": "NODE_ENV=testing EXIT_ON_START=true GENERATE_SITEMAP_TXT=true GENERATE_API_TXT=true GENERATE_ENV_TXT=true node main.js",
    "test": "NODE_ENV=testing STORAGE=sqlite SQLITE_DATABASE=dashboard mocha --ignore 'node_modules/hpagent/**/*' --retries 3 --timeout 480000 --slow 480000 --recursive --extension .test.js .",
    "screenshots": "NODE_ENV=testing STORAGE=sqlite SQLITE_DATABASE=dashboard mocha --grep screenshots --ignore 'node_modules/hpagent/**/*' --retries 3 --timeout 480000 --slow 480000 --recursive --extension .test.js ."
  },
  "dependencies": {
    "@layeredapps/dashboard": "latest",
    "@layeredapps/organizations": "latest",
    "@layeredapps/stripe-subscriptions": "latest",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "latest",
    "mocha": "latest",
    "ngrok": "latest",
    "puppeteer": "latest"
  },
  "dashboard": {
    "title": "Subscription web app",
    "modules": [
      "@layeredapps/organizations",
      "@layeredapps/stripe-subscriptions"
    ],
    "server": [
      "@layeredapps/dashboard/src/server/allow-api-requests-to-application.js",
      "@layeredapps/stripe-subscriptions/src/server/bind-stripekey.js",
      "@layeredapps/maxmind-geoip/src/server/bind-country.js"
    ],
    "proxy": [
      "@layeredapps/dashboard/src/proxy/x-account.js",
      "@layeredapps/organizations/src/proxy/x-memberships.js",
      "@layeredapps/organizations/src/proxy/x-organizations.js",
      "@layeredapps/stripe-subscriptions/src/proxy/x-subscriptions.js"
    ]
  }
}
